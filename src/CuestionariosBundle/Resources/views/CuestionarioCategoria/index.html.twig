{% extends 'ThemeBundle:Default:layout_base.html.twig' %}

{% block content -%}


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Listado CuestionarioCategoria</h3>

                <div class="box-tools">
                    <div class="input-group" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control input-sm pull-right"
                               placeholder="Search">

                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">

                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Codigo</th>
                        <th>Slug</th>
                        <th>Activo</th>
                        <th>Orden</th>
                        <th>Creado</th>
                        <th>Actualizado</th>
                        <th>Actions</th>
                    </tr>

                    {% for entity in entities %}
                        <tr>
                            <td>
                                <a href="{{ path('categorias_cuestionario_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                            </td>
                            <td>{{ entity.nombre }}</td>
                            <td>{{ entity.descripcion }}</td>
                            <td>{{ entity.codigo }}</td>
                            <td>{{ entity.slug }}</td>
                            <td>{{ entity.activo }}</td>
                            <td>{{ entity.orden }}</td>
                            <td>{% if entity.creado %}{{ entity.creado|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{% if entity.actualizado %}{{ entity.actualizado|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>

                                <a class="btn btn-default"
                                   href="{{ path('categorias_cuestionario_show', { 'id': entity.id }) }}"><i
                                            class="fa fa-eye"></i></a>
                                <a class="btn btn-default"
                                   href="{{ path('categorias_cuestionario_edit', { 'id': entity.id }) }}"><i
                                            class="fa fa-edit"></i></a>
                                <a class="btn btn-default" title="Agregar Preguntas"
                                   href="{{ path('agregar_preguntas_categorias', { 'id': entity.id }) }}"><i
                                            class="fa fa-plus"></i></a>

                            </td>
                        </tr>
                    {% endfor %}

                </table>
            </div>
            <a class="btn btn-primary" href="{{ path('categorias_cuestionario_new') }}">
                Nuevo
            </a>
            <a class="btn btn-default" href="{{ path('cuestionario_ver_checklist', {'id': 1 }) }}">
                Ver Checklist
            </a>
        </div>
    </div>


    {% endblock %}
