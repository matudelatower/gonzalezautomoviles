    {% extends 'ThemeBundle:Default:layout_base.html.twig' %}

    {% block title %}
        Encuesta
    {% endblock title %}

    {% block content -%}


    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado Encuesta</h3>


                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="data-table table table-bordered table-striped">
                        <thead>
                            <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Descripcion</th>
                                    <th>Slug</th>
                                    <th>Creado</th>
                                    <th>Actualizado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                            <tr>
                                        <td>
                                            <a href="{{ path('encuestas_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                                        </td>
                                        <td>{{ entity.nombre }}</td>
                                        <td>{{ entity.descripcion }}</td>
                                        <td>{{ entity.slug }}</td>
                                        <td>{% if entity.creado %}{{ entity.creado|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{% if entity.actualizado %}{{ entity.actualizado|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>

                        <a class="btn btn-default" href="{{ path('encuestas_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>

                        <a class="btn btn-default" href="{{ path('encuestas_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>

                                        </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    
                        <a class="btn btn-primary" href="{{ path('encuestas_new') }}">
                            Nuevo
                        </a>

                                    </div>
            </div>
        </div>
    </div>
    {{ knp_pagination_render(entities) }}
    {% endblock %}
