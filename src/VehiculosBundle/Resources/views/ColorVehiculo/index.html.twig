{% extends 'ThemeBundle:Default:layout_base.html.twig' %}

{% block title %}
    Colores de Vehiculos
{% endblock title %}

{% block content -%}


    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Colores de Vehiculos</h3>


                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="data-table table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Color</th>
                                <th>Activo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>
                                        <a href="{{ path('color_vehiculo_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                                    </td>
                                    <td>{{ entity.color }}</td>
                                    <td>{{ entity.activo }}</td>
                                    <td>

                                        <a class="btn btn-default" href="{{ path('color_vehiculo_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>

                                        <a class="btn btn-default" href="{{ path('color_vehiculo_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>

                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">

                    <a class="btn btn-primary" href="{{ path('color_vehiculo_new') }}">
                        Nuevo
                    </a>

                </div>
            </div>
        </div>
    </div>
    {{ knp_pagination_render(entities) }}
{% endblock %}
