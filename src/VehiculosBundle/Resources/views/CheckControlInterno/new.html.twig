{% extends 'ThemeBundle:Default:layout_base.html.twig' %}

{% block content_title %}
    Formulario de Alta
{% endblock %}

{% block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Check Control Interno</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-4 col-md-6">
                            <label>Modelo:</label> {{ entity.vehiculo.modelo }}
                            <label>VIN:</label> {{ entity.vehiculo.vin }}
                        </div>
                    </div>
                </div>


                {{ form(form) }}

                <div class="box-footer">
                    <a class="btn btn-default" href="{{ path('check_control_interno') }}">
                        Volver
                    </a>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
