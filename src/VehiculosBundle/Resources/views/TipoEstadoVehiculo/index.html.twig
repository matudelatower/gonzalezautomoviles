{% extends 'ThemeBundle:Default:layout_base.html.twig' %}

{% block content -%}


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Listado TipoEstadoVehiculo</h3>

                <div class="box-tools">
                    <div class="input-group" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control input-sm pull-right"
                               placeholder="Search">

                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">

            <tr>
                <th>Id</th>
                <th>Estado</th>
                <th>Descripcion</th>
                <th>Creado</th>
                <th>Actualizado</th>
                <th>Actions</th>
            </tr>

        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tipo_estado_vehiculo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{% if entity.creado %}{{ entity.creado|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.actualizado %}{{ entity.actualizado|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tipo_estado_vehiculo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tipo_estado_vehiculo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}

    </table>

    
            <a class="btn btn-primary" href="{{ path('tipo_estado_vehiculo_new') }}">
                Create a new entry
            </a>

    {% endblock %}
