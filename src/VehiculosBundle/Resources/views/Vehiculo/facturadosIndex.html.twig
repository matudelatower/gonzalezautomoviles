{% extends 'ThemeBundle:Default:layout_base.html.twig' %}
{% block title %}
    Vehiculos
{% endblock title %}
{% block content -%}
    <!-- Modal -->
    <div id="modalDeposito" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content" id="cuerpoMovimientoDepostido">

            </div>

        </div>
    </div>
    <!-- FILTROS -->
    {% include "VehiculosBundle:Vehiculo:formVehiculoFiltros.html.twig" %}
    <!-- FIN FILTROS -->

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado Vehiculos Facturados</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="data-table table table-bordered table-striped">
                        <thead>

                            <tr>
                                <th>Id</th>
                                <th>Vin</th>
                                <th>Modelo</th>
                                    {#                                <th>Motor</th>#}
                                <th>Color vehiculo</th>
                                    {#<th>Numero remito</th>
                                    <th>Fecha remito</th>
                                    <th>Numero pedido</th>#}
                                <th>Tipo de venta</th>
                                    {# <th>Codigo llave</th>
                                     <th>Codigo radio</th>
                                     <th>Codigo seguridad</th>
                                     <th>Codigo inmovilizador</th>
                                     <th>Km ingreso</th>
                                     <th>Observacion</th>#}
                                    {#                                <th>Estado</th>#}
                                <th>Deposito</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td><a href="{{ path('vehiculos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                    <td>{{ entity.vin }}</td>
                                    <td>{{ entity.modelo }}</td>
                                    {#                                    <td>{{ entity.motor }}</td>#}
                                    <td>{{ entity.color_vehiculo }}</td>
                                    {#<td>{{ entity.remito_numero }}</td>
                                    <td>{{ entity.remito_fecha|date("d-m-Y") }}</td>
                                    <td>{{ entity.numero_pedido }}</td>#}
                                    <td>{{ entity.tipo_venta_especial }}</td>
                                    {#<td>{{ entity.codigo_llave }}</td>
                                    <td>{{ entity.codigo_radio }}</td>
                                    <td>{{ entity.codigo_seguridad }}</td>
                                    <td>{{ entity.codigo_inmovilizador }}</td>
                                    <td>{{ entity.km_ingreso }}</td>
                                    <td>{{ entity.observacion }}</td>#}
                                    {#                                    <td>{{ entity.vehiculo_estado | default ("") }}</td>#}
                                    <td>{{ entity.deposito_actual | default ("") }}</td>
                                    <td>

                                        <a class="btn btn-default" href="{{ path('vehiculos_show', { 'id': entity.id }) }}"><i
                                                title="Ver" class="fa fa-eye"></i></a>
                                        <a class="btn btn-default"
                                           href="{{ path('vehiculos_editar_recibido', { 'vehiculoId': entity.id }) }}"><i
                                                title="Editar"  class="fa fa-edit"></i></a>
                                        <a class="btn btn-default"
                                           href="{{ path('check_control_interno', { 'vehiculoId': entity.id }) }}"
                                           title="Realizar checklist control interno"><i class="fa fa-check-square"></i></a>
                                        <a class="btn btn-default"
                                           href="{{ path('vehiculos_edit_patente', { 'vehiculoId': entity.id }) }}"
                                           title="Patente"><i class="fa fa-cc"></i></a>   
                                            {#                                            {% endif %}#}

                                        <a class="btn btn-default btn-deposito" data-toggle="modal"
                                           data-target="#modalDeposito"
                                           data-url="{{ path('new_movimiento_deposito_ajax', { 'vehiculoId': entity.id }) }}"
                                           title="Mover de Deposito"><i class="fa fa-exchange"></i></a>
                                          {# solo en caso de que se haya hecho el check de control interno y el mismo este firmado
                                           se puede entregar el vehiculo#}
                                            {% if entity.firmado==true %}
                                            <a class="btn btn-default"
                                               href="{{ path('vehiculos_edit_patente', { 'vehiculoId': entity.id }) }}"
                                               title="Entregar"><i class="fa fa-male"></i></a>
                                            {% endif %}
                                    </td>

                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <a class="btn btn-primary" href="{{ path('vehiculos_alta') }}">
                        Alta
                    </a>
                </div>
            </div>
        </div>
    </div>

    {{ knp_pagination_render(entities) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('.btn-deposito').click(function () {
                url = $(this).data('url');
                $.ajax({
                    type: 'get',
                    url: url,
                    success: function (data) {
                        $('#cuerpoMovimientoDepostido').html(data);
                    },
                });
            });


        });

        $(document).on('submit', '#form', function (ev) {
            ev.preventDefault();
            datos = $('#form').serializeArray();
            url = '{{ path('movimiento_deposito_create_ajax') }}';
            $.ajax({
                type: 'post',
                url: url,
                data: datos,
                success: function (data) {
                    $('#modalDeposito').modal('toggle');
                    modalAlert('La operación se realizó con exito');

                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $('#modalDeposito').modal('toggle');
                    modalAlert('La operación no se realizo');
                }
            });
        });

    </script>
{% endblock %}
