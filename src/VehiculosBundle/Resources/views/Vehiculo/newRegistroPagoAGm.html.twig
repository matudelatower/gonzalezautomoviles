<form id="formPagado" role="formAsignar" method="post">
    <div class="modal-header">
        <button data-dismiss="modal" class="close" type="button">Ã—</button>
        <h4 class="modal-title">Desea registrar el pago del siguiente vehiculo?</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label  class="control-label col-xs-2"> Modelo:</label>
            <div class="col-xs-0">
                {{ vehiculo.Modelo.NombreModelo }}
            </div>
        </div>
        <div class="form-group">
            <label  class="control-label col-xs-2"> VIN:</label>
            <div class="col-xs-0">
                {{ vehiculo.vin }}
            </div>
        </div>
        <div class="hidden">
            <input id="vehiculoIdPagado" value="{{ path('pago_a_gm_update_ajax', { 'vehiculoId': vehiculo.id }) }}"/>
        </div> 
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary"  id="btn-modal-pagado" type="submit">Aceptar</button>
        <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
    </div>
</form>