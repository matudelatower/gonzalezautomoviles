<form class="form-horizontal" id="formAjax" role="form" method="post">
    <div class="modal-header">
        <button data-dismiss="modal" class="close" type="button">×</button>
        <h4 class="modal-title">Desea registrar el pago del siguiente vehículo?</h4>
    </div>
    <div class="modal-body">
        <div class="box box-primary">
            <div class="box-body">
                <table class="record_properties">
                    <tbody>
                        <tr>
                            <th>Modelo:</th>
                            <td>{{ vehiculo.Modelo.NombreModelo~' | '~vehiculo.Modelo.anio~' | '~vehiculo.Modelo.codigo~' | '~vehiculo.Modelo.version }}</td>
                        </tr>
                        <tr>
                            <th>Color:</th>
                            <td> {{ vehiculo.colorVehiculo }}</td>
                        </tr>
                        <tr>
                            <th>VIN:</th>
                            <td> {{ vehiculo.vin }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="form-group">
            <label  class="control-label col-xs-3"> Fecha de pago:</label>
            <div class="col-xs-6">
                {{ form_widget(form.fechaPagoGm) }}
            </div>
        </div>
        <div class="hidden">
            {{form_rest(form)}}
            <input id="url" value="{{ path('pago_a_gm_update_ajax', { 'vehiculoId': vehiculo.id }) }}"/>            
        </div> 

    </div>
    <div class="modal-footer">
        <div class="form-group">
            <button class="btn btn-primary"  id="btn-modal-pagado" type="submit">Aceptar</button>
            <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
        </div>
    </div>
</form>