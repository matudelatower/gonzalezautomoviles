{% extends 'ThemeBundle:Default:layout_base.html.twig' %}

{% block content_title %}
    Formulario de Factura
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $(".maskNumeroFactura").inputmask({mask: "9999-99999999", greedy: false});
        })
    </script>
{% endblock javascripts %}


{% block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Factura</h3>
                </div>

                {{ form(form) }}


                <a class="btn btn-default" href="{{ path('vehiculos') }}">
                    Volver
                </a>
            </div>
        </div>
    </div>

{% endblock %}
