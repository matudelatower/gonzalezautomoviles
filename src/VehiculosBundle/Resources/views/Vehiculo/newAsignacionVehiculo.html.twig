<form class="form-horizontal" id="formAsignar" role="form" method="post">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Asignar vehículo</h4>
    </div>
    <div class="modal-body">
        <div class="box box-primary">
            <div class="box-header with-border">
                    <h1 class="box-title">Vehículo</h1>
                </div>
            <div class="box-body">
                <table class="record_properties">
                    <tbody>
                        <tr>
                            <th>Modelo:</th>
                            <td>{{ vehiculo.Modelo.NombreModelo~' | '~vehiculo.Modelo.anio~' | '~vehiculo.Modelo.version }}</td>
                        </tr>
                        <tr>
                            <th>Color:</th>
                            <td> {{ vehiculo.colorVehiculo }}</td>
                        </tr>
                        <tr>
                            <th>VIN:</th>
                            <td> {{ vehiculo.vin }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3"> 
                <label  class="control-label col-xs-0"> Cliente o reventa:</label>
            </div>
            <div class="col-sm-6"> 
                {{ form_widget(form.cliente) }}
            </div>
        </div>


    </div>   
    <div class="hidden">
        <input id="vehiculoIdAsignar" value="{{ path('asignacion_vehiculo_update_ajax', { 'vehiculoId': vehiculo.id }) }}"/>
    </div> 
    <div class="modal-footer">
        {% if vehiculo.cliente %}
        <button type="submit" id="btn-desasignar-cliente" data-url="{{ path('desasignacion_vehiculo_update_ajax', { 'vehiculoId': vehiculo.id }) }}" class="btn btn-danger" ><span class="glyphicon glyphicon-trash"></span> Desasignar Cliente</button>
        {% endif %}
        <button type="submit" id="btn-modal-asignar" class="btn btn-primary">Aceptar</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
    </div>
</form>