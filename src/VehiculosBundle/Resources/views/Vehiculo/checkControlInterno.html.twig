{% block content -%}
    <div class="row">
        <div class="col-md-12">


            <form method="post" id="form-checklist"
                  action="">
                {#                {{ form_widget(formDanioInterno.danioVehiculoInterno) }}#}
                <div class="col-md-6">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Control Interno</h3>
                        </div>
                        <div class="box-body">
                            {% for pregunta in preguntasOriginales %}
                                <div class="form-group">
                                    <div class="checkbox"> 
                                        <label><input type="checkbox" value="{{pregunta.id}}" name="{{pregunta.id}}"
                                      {% if pregunta.id in preguntasSeleccionadas %} 
                                          checked 
                                      {% endif%} 
                                      />{{ pregunta.pregunta }}
                                      </label>
                                    </div>
                                </div>
                            {% endfor %}
                            <button class="btn btn-primary" id="btn-guardar-checklist" type="submit">Guardar</button>
                            <a class="btn btn-default" href="{{ path('vehiculos_facturados_index') }}">
                                Volver
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
