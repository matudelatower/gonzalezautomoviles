{% extends 'ThemeBundle:Default:layout_base_reporte.pdf.twig' %}
{% block stylesheets %}
    <style>
        body {
            font-size: 10pt !important;
        }
        table {
            width: 100%;
            page-break-inside: auto
        }

        td {
            text-align: center;
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto
        }
    </style>
{% endblock stylesheets %}
{% block body %}

    <div class="box-body">
        <table class="data-table table table-bordered table-striped">
            <thead>

                <tr>
                    <th>&numero;</th>
                    <th>Modelo</th>
                    <th>Color veh&iacute;culo</th>
                    <th>Vin</th>
                    <th>Tipo venta</th>
                        {%if(tipo=='SI')%}
                        <th>Cupon</th>
                        {%endif%}
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ entity.modelo }}</td>
                        <td>{{ entity.color_vehiculo }}</td>
                        <td>{{ entity.vin }}</td>
                        <td>{{ entity.tipo_venta_especial }}</td>
                        {%if(tipo=='SI')%}
                            <th>{{entity.cupon_garantia}}</th>
                            {%endif%}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}