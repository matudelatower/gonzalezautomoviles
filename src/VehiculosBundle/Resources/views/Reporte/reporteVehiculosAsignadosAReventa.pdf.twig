{% extends 'ThemeBundle:Default:layout_base_reporte.pdf.twig' %}

{% block body %}
    <style>
        table{
            page-break-inside: auto
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto
        }
        td {
            text-align: center;
        }

    </style>
    <div>
        
        {%if(reventa is not null)%}
        <label>Reventa: </label><span>{{ reventa }}</span>
        {%endif%}
    </div>
    <br>
    <div class="box-body">
        <table class="data-table table table-bordered table-striped">
            <thead>

            <tr>
                <th>NÂ°</th>
                <th>Modelo</th>
                <th>Color vehiculo</th>
                <th>Vin</th>
                <th>Facturado</th>
                <th>Estado Patentamiento</th>
                <th>Dias de recibido</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ entity.modelo }}</td>
                    <td>{{ entity.color_vehiculo }}</td>
                    <td>{{ entity.vin }}</td>
                    <td>
                        {% if entity.factura_id %}
                            SI
                        {% else %}
                            NO
                        {% endif %}
                    </td>
                    <td>
                        {% if entity.estado_patentamiento %}
                            {{ entity.estado_patentamiento }}
                        {% endif %}
                    </td>
                    <td>
                        {{ entity.dias_de_recibido }}
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}