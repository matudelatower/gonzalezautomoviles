{% extends 'ThemeBundle:Default:layout_base.html.twig' %}

{% block content -%}
 {#FILTROS#}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Filtros</h3>
                    <div class="box-tools pull-right">
                        <button title="" data-toggle="tooltip" data-widget="collapse" class="btn btn-box-tool" data-original-title="Collapse"><i class="fa fa-minus"></i></button>
                        <button title="" data-toggle="tooltip" data-widget="remove" class="btn btn-box-tool" data-original-title="Remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form class="form-horizontal" id="form_listado" name="form_listado" role="form" method="post">
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="anio">AÃ±o</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.anio) }}
                            </div>
                            <label class="col-sm-2 control-label" for="codigo">Codigo</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.codigo) }}
                            </div>
                        </div>    
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="version">Version</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.version) }}
                            </div>
                        </div>    

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-4">
                                <button class="btn btn-primary btn-label-left" type="submit" id="btn-filtro-buscar">
                                    <span>
                                        <i class="fa fa-filter"></i>
                                    </span>
                                    Buscar
                                </button>
                                <button class="btn btn-default" type="reset">
                                    <span>
                                        <i></i>
                                    </span>
                                    Limpiar
                                </button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {#IN FILTROS#}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Codigos de Modelos</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="data-table table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Anio</th>
                                <th>Codigo</th>
                                <th>Version</th>
                                <th>Activo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        {% for entity in entities %}
                            <tr>
                                <td>
                                    <a href="{{ path('codigo_modelo_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                                </td>
                                <td>{{ entity.anio }}</td>
                                <td>{{ entity.codigo }}</td>
                                <td>{{ entity.version }}</td>
                                <td>
                                    {% if entity.activo %}
                                        <span class="badge bg-green">SI</span>
                                    {% else %}
                                        <span class="badge bg-red">NO</span>
                                    {% endif %}

                                </td>
                                <td>

                                    <a class="btn btn-default" href="{{ path('codigo_modelo_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>

                                    <a class="btn btn-default" href="{{ path('codigo_modelo_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>

                                </td>
                            </tr>
                        {% endfor %}

                    </table>
                </div>
                <div class="box-footer">

                    <a class="btn btn-primary" href="{{ path('codigo_modelo_new') }}">
                        Nuevo
                    </a>

                </div>
            </div>
        </div>
    </div>
    {{ knp_pagination_render(entities) }}
{% endblock %}
