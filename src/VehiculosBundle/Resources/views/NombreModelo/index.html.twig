{% extends 'ThemeBundle:Default:layout_base.html.twig' %}
{% block title %}
    Nombres de Modelos
{% endblock title %}
{% block content -%}


    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado Nombres de Modelos</h3>

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="data-table table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Activo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        {% for entity in entities %}
                            <tr>
                                <td>
                                    <a href="{{ path('nombre_modelo_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                                </td>
                                <td>{{ entity.nombre }}</td>
                                <td>
                                    {% if entity.activo %}
                                        <span class="badge bg-green">SI</span>
                                    {% else %}
                                        <span class="badge bg-red">NO</span>
                                    {% endif %}

                                </td>
                                <td>

                                    <a class="btn btn-default" href="{{ path('nombre_modelo_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>

                                    <a class="btn btn-default" href="{{ path('nombre_modelo_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>

                                </td>
                            </tr>
                        {% endfor %}

                    </table>
                </div>
                <div class="box-footer">

                    <a class="btn btn-primary" href="{{ path('nombre_modelo_new') }}">
                        Nuevo
                    </a>

                </div>
            </div>
        </div>
    </div>
    {{ knp_pagination_render(entities) }}
{% endblock %}
