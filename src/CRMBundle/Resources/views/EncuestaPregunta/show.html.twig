{% extends 'ThemeBundle:Default:layout_base.html.twig' %}

{% block content_title %}
    Resumen
{% endblock %}

{% block content -%}
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Pregunta</h3>
                </div>
                <div class="box-body">
                    <table class="record_properties">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Pregunta</th>
                            <td>{{ entity.pregunta }}</td>
                        </tr>
                        <tr>
                            <th>Estado</th>
                            <td>{{ entity.estado }}</td>
                        </tr>
                        <tr>
                            <th>Orden</th>
                            <td>{{ entity.orden }}</td>
                        </tr>
                        <tr>
                            <th>Cssclass</th>
                            <td>{{ entity.cssClass }}</td>
                        </tr>
                        <tr>
                            <th>Activo</th>
                            <td>{{ entity.activo }}</td>
                        </tr>
                        <tr>
                            <th>Fechacreacion</th>
                            <td>{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Fechaactualizacion</th>
                            <td>{{ entity.fechaActualizacion|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>


                <div class="box-footer">
                    <a class="btn btn-default" href="{{ path('crm_preguntas') }}">
                        Volver
                    </a>


                    <a class="btn btn-primary" href="{{ path('crm_preguntas_edit', { 'id': entity.id }) }}">
                        Editar
                    </a>

                </div>
            </div>
        </div>
    </div>


{% endblock %}
