{% extends 'ThemeBundle:Default:layout_base.html.twig' %}

{% block content_title %}
    Resumen
{% endblock %}

{% block content -%}
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Encuesta</h3>
                </div>
                {% if encuestaResultadoCabecera.cancelada %}
                    <div class="box-body">
                        <div class="alert alert-warning alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <h4><i class="icon fa fa-warning"></i> Aiso!</h4>
                            Encuesta Cancelada
                        </div>
                    </div>
                {% else %}
                    <div class="box-body table-responsive no-padding">

                        <table class="table table-hover">


                            {% for resultado in encuestaResultadoCabecera.encuestaResultadoRespuesta %}
                                <tr>
                                    <td>
                                        {{ loop.index }}
                                    </td>
                                    <td>
                                        {{ resultado.encuestaPregunta }}
                                    </td>
                                    <td>
                                        <b>{{ resultado.encuestaOpcionRespuesta }}</b>
                                    </td>
                                </tr>
                            {% endfor %}

                        </table>
                    </div>
                {% endif %}


                <div class="box-footer">
                    <a class="btn btn-default"
                       href="{{ path('crm_encuestas_realizadas', {'slug': app.request.get('slug')}) }}">
                        Volver
                    </a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
