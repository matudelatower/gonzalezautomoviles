{% extends 'ThemeBundle:Default:layout_base.html.twig' %}

{% block content_title %}
    Resumen
{% endblock %}

{% block content -%}
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Empleado</h3>
                </div>
                <div class="box-body">
                    <table class="record_properties">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ entity.id }}</td>
                            </tr
                            <tr>
                                <th>Nombre</th>
                                <td>{{ entity.personaTipo.first().persona.nombre }}</td>
                            </tr>
                            <tr>
                                <th>Apellido</th>
                                <td>{{ entity.personaTipo.first().persona.apellido }}</td>
                            </tr>
                            <tr>
                                <th>Tipo documento</th>
                                <td>{{ entity.personaTipo.first().persona.tipoDocumento }}</td>
                            </tr>
                            <tr>
                                <th>Numero documento</th>
                                <td>{{ entity.personaTipo.first().persona.numeroDocumento }}</td>
                            </tr>
                            <tr>
                                <th>Estado civil</th>
                                <td>{{ entity.personaTipo.first().persona.estadoCivil }}</td>
                            </tr>
                            <tr>
                                <th>Telefono</th>
                                <td>{{ entity.personaTipo.first().persona.telefono }}</td>
                            </tr>
                            <tr>
                                <th>Telefono laboral</th>
                                <td>{{ entity.personaTipo.first().persona.telefonoLaboral }}</td>
                            </tr>
                            <tr>
                                <th>Celular</th>
                                <td>{{ entity.personaTipo.first().persona.celular }}</td>
                            </tr>
                            <tr>
                                <th>Mail</th>
                                <td>{{ entity.personaTipo.first().persona.mail }}</td>
                            </tr>
                            <tr>
                                <th>Web</th>
                                <td>{{ entity.personaTipo.first().persona.web }}</td>
                            </tr>
                            <tr>
                                <th>Fecha nacimiento</th>
                                <td>{{ entity.personaTipo.first().persona.fechaNacimiento|date('d/m/Y H:i:s') }}</td>
                            </tr>
                            <tr>
                                <th>Calle</th>
                                <td>{{ entity.personaTipo.first().persona.calle }}</td>
                            </tr>
                            <tr>
                                <th>Numero calle</th>
                                <td>{{ entity.personaTipo.first().persona.numeroCalle }}</td>
                            </tr>
                            <tr>
                                <th>Barrio</th>
                                <td>{{ entity.personaTipo.first().persona.barrio }}</td>
                            </tr>
                            <tr>
                                <th>Localidad</th>
                                <td>{{ entity.personaTipo.first().persona.localidad }}</td>
                            </tr>
                            <tr>
                                <th>Categor√≠a</th>
                                <td>
                                    {% for categoria in entity.empleadoCategoria %}
                                        <span>{{ categoria.categoriaEmpleado }}</span>
                                        <br>
                                    {% endfor %}
                                </td>
                            </tr>
                            <tr>
                                <th>Usuario</th>
                                <td>{{ entity.personaTipo.first().usuario }}</td>
                            </tr>
                             <tr>
                                <th>Observacion</th>
                                <td>{{ entity.personaTipo.first().persona.observacion }}</td>
                            </tr>
                            <tr>
                                <th>Creado</th>
                                <td>{{ entity.creado|date('d/m/Y H:i:s') }}</td>
                            </tr>
                            <tr>
                                <th>Actualizado</th>
                                <td>{{ entity.actualizado|date('d/m/Y H:i:s') }}</td>
                            </tr>

                        </tbody>
                    </table>
                </div>


                <div class="box-footer">
                    <a class="btn btn-default" href="{{ path('empleados') }}">
                        Volver
                    </a>


                    <a class="btn btn-primary" href="{{ path('empleados_edit', { 'id': entity.id }) }}">
                        Editar
                    </a>

                </div>
            </div>
        </div>
    </div>
    {#{{ form(delete_form) }}#}


{% endblock %}
