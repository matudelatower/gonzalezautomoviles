{% extends 'ThemeBundle:Default:layout_base.html.twig' %}

{% block content_title %}
   Resumen
{% endblock %}

{% block content -%}
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Sucursal</h3>
            </div>
            <div class="box-body">
                <table class="record_properties">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ entity.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Calle</th>
                            <td>{{ entity.calle }}</td>
                        </tr>
                        <tr>
                            <th>Numerocalle</th>
                            <td>{{ entity.numeroCalle }}</td>
                        </tr>
                        <tr>
                            <th>Telefono1</th>
                            <td>{{ entity.telefono1 }}</td>
                        </tr>
                        <tr>
                            <th>Telefono2</th>
                            <td>{{ entity.telefono2 }}</td>
                        </tr>
                        <tr>
                            <th>Mail</th>
                            <td>{{ entity.mail }}</td>
                        </tr>
                        <tr>
                            <th>Web</th>
                            <td>{{ entity.web }}</td>
                        </tr>
                        <tr>
                            <th>Creado</th>
                            <td>{{ entity.creado|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Actualizado</th>
                            <td>{{ entity.actualizado|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>


        <div class="box-footer">
<a class="btn btn-default" href="{{ path('sucursales') }}">
    Volver
</a>


        <a class="btn btn-primary" href="{{ path('sucursales_edit', { 'id': entity.id }) }}">
            Editar
        </a>

</div>
</div>
</div>
</div>
    {{ form(delete_form) }}


{% endblock %}
